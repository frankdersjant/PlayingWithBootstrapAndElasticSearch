@using PlayingWithBootstrap.Models;
@using Microsoft.AspNet.Identity;

@{
    ViewBag.Title = "Manage Account";
}


<div>
    <div class="row">
        <div class=" col-md-12">
            <ul class="nav nav-tabs" role="tablist">
                <li class="active"><a href="#notifications" aria-controls="home" role="tab" data-toggle="tab">Home</a></li>
                <li><a href="#linkedAccounts" role="tab" data-toggle="tab">Linked Accounts</a></li>
                <li><a href="#passwordReset" role="tab" data-toggle="tab">Password Reset</a></li>
            </ul>

            <div class="tab-content">
                <div role="tabpanel" class="tab-pane fade in active" id="notifications">...</div>
                <p> Put notifications here..</p>
                <div role="tabpanel" class="tab-pane fade" id="linkedAccounts">
                    <section id="externalLogins">
                        @Html.Action("RemoveAccountList")
                        @Html.Partial("_ExternalLoginsListPartial", new ExternalLoginListViewModel { Action = "LinkLogin", ReturnUrl = ViewBag.ReturnUrl })
                    </section>
                </div>
                <div role="tabpanel" class="tab-pane fade" id="passwordReset">...</div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
